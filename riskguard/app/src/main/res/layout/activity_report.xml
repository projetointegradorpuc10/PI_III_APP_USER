<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app">


        <Button
            android:id="@+id/btnLogout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:text="Logout" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_logo" />



        <!-- CAMPO TÍTULO -->
        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Título do Report"
            android:minHeight="48dp"
            android:padding="10dp" />

        <!-- CAMPO DESCRIÇÃO -->
        <EditText
            android:id="@+id/etDescricao"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_below="@id/etTitulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Descrição"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <!-- BOTÃO ANEXO -->
        <Button
            android:id="@+id/btnAnexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etDescricao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Anexar Arquivo"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000" />

        <!-- RADIOGROUP - TIPO DE RISCO -->
        <RadioGroup
            android:id="@+id/rgRisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAnexo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbBaixo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baixo"
                 />

            <RadioButton
                android:id="@+id/rbModerado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderado"
              />

            <RadioButton
                android:id="@+id/rbAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alto"
              />
        </RadioGroup>


        <!-- BOTÃO ENVIAR REPORT -->
        <Button
            android:id="@+id/btnEnviarReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgRisco"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enviar Report"
            android:backgroundTint="#78D5F9"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</LinearLayout>
